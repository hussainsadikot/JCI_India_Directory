<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ZoneGoverningBodyActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:id="@+id/root_relative">


            <LinearLayout
                android:id="@+id/layout_ZoneGoverning_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"

                >

                <Button
                    android:id="@+id/button_zone_president"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Zone President"
                    android:textAlignment="textStart"
                    android:layout_margin="8dp"
                    />
                <Button
                    android:id="@+id/button_Zone_governing_board"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Zone governing board"
                    android:textAlignment="textStart"
                    android:layout_margin="8dp"
                    />
                <Button
                    android:id="@+id/button_Backbone_of_Zone_IX"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Backbone of Zone IX"
                    android:textAlignment="textStart"
                    android:layout_margin="8dp"
                    />
            </LinearLayout>


        </RelativeLayout>


    </ScrollView>





</RelativeLayout>