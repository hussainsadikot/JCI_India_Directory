<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/profile_name_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            >
            <ImageView
                android:id="@+id/image_propic"
                android:layout_width="200dp"
                android:layout_height="150dp"

                android:layout_marginTop="8dp"
                android:src="@drawable/ic_android_dp"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_propic"
                android:layout_centerHorizontal="true"
                android:text="Hussain Saifuddin Sadikot"
                android:textSize="24sp"
                android:layout_margin="8dp"
                />
            <TextView
                android:id="@+id/designation_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_tv"
                android:layout_centerHorizontal="true"
                android:text="National President : 2020"
                android:textSize="20sp"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/house_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="false"

            android:layout_below="@id/profile_name_root"
            android:layout_marginTop="8dp"

            >
            <ImageView
                android:id="@+id/image_house_name"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_android_dp"
                />
            <TextView
                android:id="@+id/house_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="House Name"
                android:textAlignment="textStart"
                />
        </LinearLayout>

            <LinearLayout
                android:id="@+id/phone_number_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="false"

                android:layout_below="@id/house_name_layout"
                android:layout_marginTop="8dp"

                >
                <ImageView
                    android:id="@+id/image_phone_number"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_android_dp"
                    />
                <TextView
                    android:id="@+id/phone_number_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone number"
                    android:textAlignment="textStart"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/email_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="false"

                android:layout_below="@id/phone_number_layout"
                android:layout_marginTop="8dp"

                >
                <ImageView
                    android:id="@+id/image_email"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_android_dp"
                    />
                <TextView
                    android:id="@+id/email_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="email"
                    android:textAlignment="textStart"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/address_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="false"

                android:layout_below="@id/email_layout"
                android:layout_marginTop="8dp"

                >
                <ImageView
                    android:id="@+id/image_address"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_android_dp"/>
                <TextView
                    android:id="@+id/address_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="address"
                    android:textAlignment="textStart"
                    />
            </LinearLayout>


        </RelativeLayout>



    </ScrollView>




</RelativeLayout>